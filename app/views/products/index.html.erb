<h1 class="title is-1">Products</h1>
<div class="ml-3">
  <%= search_form_for @q do |f| %>
  <div class ="is-hidden">
    <%= f.label :product_name_or_desciption_cont %>
  </div>
  <p>Search:</p>
    <%= f.search_field :product_name_or_description_cont %>

  <div class ="is-hidden">
    <%= f.label :category_name_cont %>
  </div>
  <p>Category:</p>
    <%= f.search_field :category_name_cont %>

    <%= f.submit %>
<% end %>
</div>

<% breadcrumb :products, @products %>
<div id="Products">
  <% @products.each do |product| %>
    <%= render product %>
  <% end %>
  <div class="ml-5 mr-5">
        <%= paginate @products %>
    </div>
</div>